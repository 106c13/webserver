clean:
	@rm -f $(OBJ)
	@echo "$(RED)ðŸ§¹ Object files removed!$(RESET)"

fclean: clean
	@rm -f $(NAME)
	@echo "$(RED)ðŸ”¥ Executable removed: $(NAME)$(RESET)"

re: fclean all

.PHONY: all clean fclean re
